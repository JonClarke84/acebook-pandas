<div class="container-3">
  <div class="card">
    <nav class="navMenu">
      <a href="/">Home</a>
      <a href="/posts">Posts</a>
      <a href="/posts/new">Add Post</a>
      <a href="/users/profile">Profile</a>
      <a href="/">Log Out</a>
    </nav>
  </div>
</div>

<div class="container-2">
  <div class="card">
    <h1>POSTS</h1>
  </div>
</div>

<div class="container-2">
  <form action="/posts/new">
    <input class="button" type="submit" value="New Post" />
</div>

<div>
  {{#each posts}}
  <div class="container-4">
    <div class="card-2">
      <div class="user">
        <a href="/users/profile"><img class="avatar" src="{{this.profilePictureURL}}"></a>
        <p>{{this.firstName}} {{this.lastName}}</p>
      </div>

      <ul class="post">
      <span class="post-title">{{this.title}}</span>
      <span class="post-message">{{this.message}}</span>
      <span class="post-image">{{this.imageURL}}</span>
      </ul>

      <li>
        <form method="post" action="/posts/like">
          <input type="hidden" name="post" value="{{this._id}}">
          <button class="button-4" type="submit">ü§ç{{this.likes.length}}</button>
        </form>
        <form method="post" action="/posts/delete">
          <input type="hidden" name="post" value="{{this._id}}">
          <button class="button-4" type="submit">Delete</button>
        </form>
        <a class="edit">Posted on: {{this.createdAt}}</a>
      </li>
      <form method="post" action="posts/comments/new">
      <input type="hidden" name="post" value="{{this._id}}">
      {{#if this.comments.length}}
        <input type="text" name="comment", id="{{this._id}}" placeholder="comment...">
        <input type="submit" value="Add Comment">
      {{else}}
        <input type="text" name="comment", id="{{this._id}}" placeholder="be the first to comment...">
        <input type="submit" value="Add Comment">
      {{/if}}
      </form>
      <ul>
        {{#each this.comments}}
        <li><span><img width= "30px" src="{{this.user.profilePictureURL}}"></span>
        <span>{{this.user.firstName}} {{this.user.lastName}}</span>
        <span>{{this.message}}</span>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
  {{/each}}
</div>

