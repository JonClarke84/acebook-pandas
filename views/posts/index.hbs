<div class="container-3">
  <div class="card">
    <nav class="navMenu">
      <a href="/">Home</a>
      <a href="/posts">Posts</a>
      <a href="/posts/new">Add Post</a>
      <a href="/users/profile">Profile</a>
      <a href="/">Log Out</a>
    </nav>
  </div>
</div>

<div class="container-2">
  <div class="card">
    <h1>Posts</h1>
    <ul class="posts">
      {{#each posts}}
      <li class="list-item">
      <span><img src="{{this.profilePictureURL}}"></span>
      <span>{{this.firstName}} {{this.lastName}}</span>
      <span>{{this.message}}</span>
      <span>Posted on: {{this.createdAt}}</span>
      <span><form method="post" action="/posts/like">
        <input type="hidden" name="post" value="{{this._id}}">
        <input type="submit" value="👍 {{this.likes.length}}">
      </form></span>
      <form method="post" action="posts/comments/new">
      <input type="hidden" name="post" value="{{this._id}}">
      {{#if this.comments.length}}
        <input type="text" name="comment", id="{{this._id}}" placeholder="comment...">
        <input type="submit" value="Add Comment">
      {{else}}
        <input type="text" name="comment", id="{{this._id}}" placeholder="be the first to comment...">
        <input type="submit" value="Add Comment">
      {{/if}}
      </form>
      </li>
      {{/each}}
    </ul>
  </div>
</div>

<div class="container-2">
<form action="/posts/new">
  <input class="button" type="submit" value="New Post" />
</div>

<script src="/javascripts/dateFormat.js"></script>