<div class="container-2">
  <div class="card">
    <h1>USER PROFILE</h1>
    <hr>
    <form class="form-1" id="user-profile" action="/users/profile" method="post">
      <span>
        <img class="img-2" id="profilePictureURL" src="{{user.profilePictureURL}}" />
      </span>
      <li>
        <label for="firstName">First Name:</label>
        <input class="button" id="firstName" type="text" name="firstName" value="{{user.firstName}}" />
      </li>
      <li>
        <label for="lastName">Last Name:</label>
        <input class="button" id="lastName" type="text" name="lastName" value="{{user.lastName}}" />
      </li>
      <li>
        <label for="dob">Date of Birth:</label>
        <input class="button" id="dob" type="text" name="dob" value="{{user.dob}}" readonly><br>
      </li>
      <li>
        <label for="email">Email: </label>
        <input class="button" id="email" type="email" name="email" value="{{user.email}}" />
      </li>
      <li>
        <label for="password">Password: </label>
        <input class="button" id="password" type="password" name="password" value="{{user.password}}" />
      </li>
      <li>
        <label for="passwordCheck">Confirm Password:</label>
        <input class="button" id="passwordCheck" type="password" name="passwordCheck" value="{{user.passwordCheck}}" />
      </li>
      <li>
        <label for="profilePictureURL">Profile Picture URL: </label>
        <input class="button" id="profilePictureURL" type="profilePictureURL" name="profilePictureURL"
          value="{{user.profilePictureURL}}" />
      </li>

      <br>
      <input class="button-2" id="submit" type="submit" value="Submit Changes" />

  </div>
</div>

<div class="container-2">
  <div class="card">
    <h1>ABOUT ME</h1>
    <hr>
    <div class="form-1">
      <li>
        <label for="bio">Bio:</label>
        <input class="button-3" id="bio" type="text" name="bio" value="{{user.bio}}" />
      </li>
      <li>
        <label for="location">Location:</label>
        <input class="button" id="location" type="text" name="location" value="{{user.location}}" />
      </li>
      <li>
        <label for="hobbie">Hobbie:</label>
        <input class="button" id="hobbie" type="text" name="hobbie" value="{{user.hobbie}}" />
      </li>
      <li>
        <label for="favShow">Favourite TV Show:</label>
        <input class="button" id="favShow" type="text" name="favShow" value="{{user.favShow}}" />
      </li>
      <li>
        <label for="favMovie">Favourite Movie:</label>
        <input class="button" id="favMovie" type="text" name="favMovie" value="{{user.favMovie}}" />
      </li>
      <br>
      <input class="button-2" id="submit" type="submit" value="Submit Changes" />
      </form>
    </div>
  </div>
</div>

<div class="container-2">
  <div class="card">
    <form class="form-1" id="user-delete" action="/users/delete" method="post">
      <p>If you wish to delete you account, press the button below.</p>
      <input class="button-2" id="delete" type="submit" value="Remove Account" />
    </form>
  </div>
</div>